<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pandora_wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/setting_black_translucent"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
            android:overScrollMode="always"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <cn.zmdx.kaka.fast.locker.widget.TypefaceTextView
                        style="@style/setting_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/pandora_wallpaper_textview_margin_bottom"
                        android:layout_marginLeft="@dimen/setting_title_textview_margin_left"
                        android:layout_marginRight="@dimen/setting_title_textview_margin_left"
                        android:layout_marginTop="@dimen/pandora_wallpaper_textview_margin_top"
                        android:gravity="center_vertical"
                        android:text="@string/pandora_wallpaper_custom" />

                    <LinearLayout
                        android:id="@+id/parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_title_line_height"
                        android:layout_marginLeft="@dimen/setting_title_textview_margin_left"
                        android:layout_marginRight="@dimen/setting_title_textview_margin_left"
                        android:layout_marginTop="@dimen/pandora_wallpaper_default_line_margin_top"
                        android:contentDescription="@string/contentDescription"
                        android:scaleType="fitXY"
                        android:src="@color/setting_divider_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <cn.zmdx.kaka.fast.locker.widget.TypefaceTextView
                        style="@style/setting_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/pandora_wallpaper_textview_margin_bottom"
                        android:layout_marginLeft="@dimen/setting_title_textview_margin_left"
                        android:layout_marginRight="@dimen/setting_title_textview_margin_left"
                        android:layout_marginTop="@dimen/pandora_wallpaper_textview_margin_top"
                        android:gravity="center_vertical"
                        android:text="@string/pandora_wallpaper_advice" />

                    <LinearLayout
                        android:id="@+id/advice_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pandora_locker_content_background"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp" >

            <RelativeLayout
                android:id="@+id/pandora_locker_title"
                android:layout_width="match_parent"
                android:layout_height="49dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="11dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/from_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/share_image_news_from"
                        android:textColor="#3f3f3f"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/from_platform_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="搜狐新闻"
                        android:textColor="#565656"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share_from_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/single_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/pandora_locker_title"
                android:scaleType="centerCrop" />

            <cn.zmdx.kaka.locker.widget.TypefaceTextView
                android:id="@+id/image_news_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:gravity="center_vertical"
                android:lineSpacingExtra="6dp"
                android:paddingLeft="18dp"
                android:paddingRight="13dp"
                android:paddingTop="10dp"
                android:textColor="#272727"
                android:textSize="17sp" />

            <cn.zmdx.kaka.locker.widget.TypefaceTextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/single_img"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#272727"
                android:textSize="23sp" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
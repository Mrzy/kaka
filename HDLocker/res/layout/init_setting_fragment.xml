<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background_color"
    android:clickable="true"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/init_setting_MIUI_allow_floating_window_guide"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/init_setting_item_bg_normal"
            android:clickable="true"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical" >

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    style="@style/pandora_init_setting_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_setting_MIUI_allow_floating_window" />

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    style="@style/pandora_init_setting_detail_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_setting_xiaomi_prompt" />
            </LinearLayout>

            <ImageView
                android:id="@+id/init_setting_MIUI_allow_floating_window_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/contentDescription"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/init_setting_MIUI_trust_guide"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/init_setting_item_bg_normal"
            android:clickable="true"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical" >

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    style="@style/pandora_init_setting_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_setting_MIUI_trust" />

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    style="@style/pandora_init_setting_detail_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_setting_MIUI_trust_detail" />
            </LinearLayout>

            <ImageView
                android:id="@+id/init_setting_MIUI_trust_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/contentDescription"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/init_setting_close_systemlocker_guide"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/init_setting_item_bg_normal"
            android:clickable="true"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical" >

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    style="@style/pandora_init_setting_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_setting_close_systemlocker" />

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    style="@style/pandora_init_setting_detail_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_setting_close_systemlocker_detail" />
            </LinearLayout>

            <ImageView
                android:id="@+id/init_setting_close_systemlocker_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/contentDescription"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/init_setting_read_notification_bar_guide"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/init_setting_item_bg_normal"
            android:clickable="true"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical" >

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    style="@style/pandora_init_setting_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_setting_read_notification_title" />

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    style="@style/pandora_init_setting_detail_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_setting_read_notification_prompt" />
            </LinearLayout>

            <ImageView
                android:id="@+id/init_setting_read_notification_bar_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/contentDescription"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>

        <cn.zmdx.kaka.locker.widget.TypefaceTextView
            android:id="@+id/init_setting_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="进度0%"
            android:textColor="@color/init_setting_no_progress"
            android:textSize="12dp" />

        <cn.zmdx.kaka.locker.widget.TypefaceTextView
            android:id="@+id/init_setting_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/init_setting_com_un_press"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/init_setting_complete_to_set"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <cn.zmdx.kaka.locker.widget.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/locker_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:dragView="@+id/lock_btn"
        sothree:foregroundDrawable="@drawable/locker_foreground"
        sothree:panelHeight="80dp"
        sothree:shadowHeight="8dp"
        sothree:topSeekoutHeight="80dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainView"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lock_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cccccc" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lock_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cccccc"
            android:clickable="true"
            android:focusable="false"
            android:paddingTop="5dp" >

            <Button
                android:id="@+id/lock_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="下拉" />
        </RelativeLayout>
    </cn.zmdx.kaka.locker.widget.SlidingUpPanelLayout>

</LinearLayout>
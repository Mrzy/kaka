<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="25dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_weather_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/weather_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp" >

            <FrameLayout
                android:id="@+id/fl_no_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone" >

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    android:id="@+id/tv_no_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:layout_gravity="center_horizontal"
                    android:shadowColor="#30000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:textColor="#d0ffffff"
                    android:textSize="15dp" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/rl_weather_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_weather_feature_pic"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    android:id="@+id/tv_weather_centtemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:shadowColor="#30000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:textColor="#d0ffffff"
                    android:textSize="15dp" />

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    android:id="@+id/tv_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/dingwei_icon"
                    android:drawablePadding="2dp"
                    android:shadowColor="#30000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:textColor="#d0ffffff"
                    android:textSize="15dp" />
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="135dp"
            android:layout_height="1dp"
            android:layout_below="@id/weather_area"
            android:layout_marginTop="6dp"
            android:background="#d0ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <cn.zmdx.kaka.locker.widget.TextClockCompat
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:gravity="center_horizontal"
            android:shadowColor="#30000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="@color/white"
            android:textSize="65dp" />

        <cn.zmdx.kaka.locker.widget.TextClockCompat
            android:id="@+id/lock_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-12dp"
            android:shadowColor="#30000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#d0ffffff"
            android:textSize="17dp" />

        <cn.zmdx.kaka.locker.widget.TypefaceTextView
            android:id="@+id/tv_lunar_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#30000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#d0ffffff"
            android:textSize="13dp" />
    </LinearLayout>

</LinearLayout>
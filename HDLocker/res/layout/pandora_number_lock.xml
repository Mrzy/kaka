<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:keyboard="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:baselineAligned="true"
    android:orientation="vertical" >

    <cn.zmdx.kaka.locker.widget.TypefaceTextView
        android:id="@+id/number_lock_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/number_lock_prompt"
        android:textColor="@color/setting_text_normal_color"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/pandora_number_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/gusture_pattern_lock_margin_top"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/pandora_number_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/pandora_number_lock_line" />

        <ImageView
            android:id="@+id/pandora_number_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/pandora_number_lock_line" />

        <ImageView
            android:id="@+id/pandora_number_three"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/pandora_number_lock_line" />

        <ImageView
            android:id="@+id/pandora_number_four"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/pandora_number_lock_line" />
    </LinearLayout>
    <!-- 284  245 -->

    <cn.zmdx.kaka.locker.widget.KeyboardView
        android:id="@+id/pandora_keyboard_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#03a9f4"
        android:shadowRadius="0.0"
        keyboard:background="@android:color/transparent"
        keyboard:keyBackground="@drawable/pandora_number_lock_key_selector"
        keyboard:keyTextColor="@color/setting_text_normal_color"
        keyboard:keyTextSize="20sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/part1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/commonWidgetArea"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical" >

            <cn.zmdx.kaka.locker.widget.WifiImageView
                android:id="@+id/wifi_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/wifi_icon" />

            <cn.zmdx.kaka.locker.battery.BatteryView
                android:id="@+id/batteryView"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_toLeftOf="@+id/battery_info" />

            <cn.zmdx.kaka.locker.widget.TypefaceTextView
                android:id="@+id/battery_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:shadowColor="#30000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <cn.zmdx.kaka.locker.widget.TextClockCompat
                android:id="@+id/fakeStatusDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:shadowColor="#30000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/dateWeatherLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp" >
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp"
        android:orientation="vertical" >

        <cn.zmdx.kaka.locker.notification.view.NotificationListView
            android:id="@+id/lock_bottom_notification_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:paddingTop="5dp" >
        </cn.zmdx.kaka.locker.notification.view.NotificationListView>
    </LinearLayout>

</LinearLayout>
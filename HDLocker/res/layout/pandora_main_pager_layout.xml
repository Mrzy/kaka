<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/part1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/commonWidgetArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/wifi_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/wifi_icon" />

            <cn.zmdx.kaka.locker.battery.BatteryView
                android:id="@+id/batteryView"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp" />

            <cn.zmdx.kaka.locker.widget.TypefaceTextView
                android:id="@+id/battery_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:textSize="12dp" />
        </LinearLayout>

        <cn.zmdx.kaka.locker.widget.TextClockCompat
            android:id="@+id/clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:shadowColor="#30000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="@color/white"
            android:textSize="65sp" />

        <LinearLayout
            android:id="@+id/lock_date_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <cn.zmdx.kaka.locker.widget.TypefaceTextView
                android:id="@+id/lock_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#30000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textColor="#d0ffffff"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp"
        android:orientation="vertical" >

        <cn.zmdx.kaka.locker.notification.view.NotificationListView
            android:id="@+id/lock_bottom_notification_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:paddingTop="5dp" >
        </cn.zmdx.kaka.locker.notification.view.NotificationListView>

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/unlockShimmerTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="@string/pandora_locker_shimmer_unlock_str"
            android:textColor="#dc797979"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
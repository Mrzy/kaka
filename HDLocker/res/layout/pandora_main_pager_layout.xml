<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <cn.zmdx.kaka.locker.battery.BatteryView
            android:id="@+id/batteryView"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp" />

        <cn.zmdx.kaka.locker.widget.TypefaceTextView
            android:id="@+id/battery_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp" />
    </LinearLayout>

    <cn.zmdx.kaka.locker.widget.TypefaceTextView
        android:id="@+id/weather_summary"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginTop="20dp"
        android:shadowColor="#30000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="今天天气不错"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:visibility="visible" />

    <LinearLayout
        android:paddingLeft="15dp"
        android:id="@+id/lock_date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <cn.zmdx.kaka.locker.widget.TypefaceTextView
            android:id="@+id/lock_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="2月18日 星期三"
            android:textColor="#C9C9C9"
            android:textSize="13sp" />

        <cn.zmdx.kaka.locker.widget.TypefaceTextView
            android:id="@+id/lock_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="4℃"
            android:textColor="#eeffffff"
            android:textSize="17sp" />
    </LinearLayout>

    <cn.zmdx.kaka.locker.widget.DigitalClocks
        xmlns:clock="http://schemas.android.com/apk/res/cn.zmdx.kaka.locker"
        android:paddingLeft="15dp"
        android:id="@+id/digitalClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-13dp"
        android:gravity="center_horizontal"
        android:shadowColor="#30000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:textColor="@color/white"
        android:textSize="70sp"
        clock:format="24" />

    <cn.zmdx.kaka.locker.notification.view.NotificationLayout
        android:id="@+id/lock_bottom_notification_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:paddingTop="5dp" >
    </cn.zmdx.kaka.locker.notification.view.NotificationLayout>

</LinearLayout>
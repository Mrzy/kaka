<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pandora_lock_password_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:clickable="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/setting_black_translucent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/pandora_lock_password_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_title_textview_margin_left"
            android:layout_marginRight="@dimen/setting_title_textview_margin_left"
            android:orientation="vertical" >

            <cn.zmdx.kaka.fast.locker.widget.TypefaceTextView
                style="@style/init_setting_big_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/setting_title_textview_margin_bottom"
                android:layout_marginTop="@dimen/setting_title_textview_margin_top"
                android:gravity="center_vertical"
                android:text="@string/lock_password_title" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_title_line_height"
                android:contentDescription="@string/contentDescription"
                android:scaleType="fitXY"
                android:src="@color/setting_divider_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_title_textview_margin_left"
            android:layout_marginRight="@dimen/setting_title_textview_margin_left"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/pandora_lock_type_none_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/setting_title_textview_margin_left" >

                <cn.zmdx.kaka.fast.locker.widget.TypefaceTextView
                    style="@style/setting_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="@string/lock_password_type_none" />

                <ImageView
                    android:id="@+id/pandora_lock_type_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/pandora_lock_password_radio_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pandora_lock_type_pattern_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/setting_title_textview_margin_left" >

                <cn.zmdx.kaka.fast.locker.widget.TypefaceTextView
                    style="@style/setting_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:text="@string/lock_password_type_pattern" />

                <ImageView
                    android:id="@+id/pandora_lock_type_pattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/pandora_lock_password_radio_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pandora_lock_type_number_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/setting_title_textview_margin_left" >

                <cn.zmdx.kaka.fast.locker.widget.TypefaceTextView
                    style="@style/setting_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:text="@string/lock_password_type_number" />

                <ImageView
                    android:id="@+id/pandora_lock_type_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/pandora_lock_password_radio_normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:background="#89000000"
    android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/largeIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/smallIcon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@id/largeIcon"
        android:layout_alignRight="@id/largeIcon"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY" />

    <cn.zmdx.kaka.locker.widget.TypefaceTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/largeIcon"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="17dp" />

    <cn.zmdx.kaka.locker.widget.TypefaceTextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/largeIcon"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="2"
        android:textColor="#ffffff"
        android:textSize="13dp" />

    <View
        android:id="@+id/blackOverlay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="false" />

    <TextView
        android:id="@+id/rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="45dp"
        android:text="右划查看>>"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:visibility="invisible" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/pandora_online_wallpaper_gridview_item_width"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.android.volley.ui.NetworkImageView
        android:id="@+id/pandora_online_wallpaper_item_imageview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pandora_online_wallpaper_gridview_item_height"
        android:contentDescription="@string/contentDescription"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/pandora_online_wallpaper_item_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pandora_online_wallpaper_gridview_item_height"
        android:contentDescription="@string/contentDescription" />

    <ImageView
        android:id="@+id/pandora_online_wallpaper_item_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/ic_launcher"
        android:visibility="gone" />

</RelativeLayout>
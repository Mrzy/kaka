<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pandora_box_nodata_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/pandora_box_nodata_show_imageview"
        android:layout_width="@dimen/pandora_box_nodata_show_image_width"
        android:layout_height="@dimen/pandora_box_nodata_show_image_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pandora_box_nodata_show_image_width"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/pandora_box_nodata_show_textview"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_about_us_textview_height"
        android:gravity="center_horizontal"
        android:layout_below="@+id/pandora_box_nodata_show_imageview"
        android:layout_centerHorizontal="true"
        android:text="@string/setting_about_pandora"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/pandora_box_nodata_show_textview1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/setting_about_us_textview_height"
        android:layout_below="@+id/pandora_box_nodata_show_textview"
        android:layout_centerHorizontal="true"
        android:text="@string/setting_about_text"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/header_part1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/news_header_bg" >

            <!--
                 <View
                android:id="@+id/news_header_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="#47ffffff" />
            -->

            <RelativeLayout
                android:id="@+id/news_header_hasContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/news_header_slideup_icon_small"
                    android:drawablePadding="4dp"
                    android:shadowColor="#30000000"
                    android:layout_centerVertical="true"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:text="上滑查看"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:textColor="#80ffffff"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/news_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/red_block"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/tip"
                    android:drawablePadding="4dp"
                    android:shadowColor="#30000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:textColor="#c0ffffff"
                    android:textSize="15dp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/news_header_noData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:src="@drawable/news_header_slideup_icon"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/header_part2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#80000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <!--
                 <cn.zmdx.kaka.locker.widget.TextClockCompat
                android:id="@+id/digitalClockDateNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:shadowColor="#30000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textColor="@color/white"
                android:textSize="23sp" />
            -->
        </LinearLayout>

        <View
            android:id="@+id/dragview2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#80000000" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/news_tip_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone" >
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <cn.zmdx.kaka.locker.widget.PagerSlidingTabStrip
                    xmlns:psts="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/newsTabStrip"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    psts:pstsDividerColor="@android:color/transparent"
                    psts:pstsIndicatorColor="#ffffff"
                    psts:pstsIndicatorHeight="2dp"
                    psts:pstsPaddingRight="45dp"
                    psts:pstsUnderlineColor="@android:color/transparent" />

                <ImageView
                    android:id="@+id/addNewsTabBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/channel_entrance_icon"
                    android:textColor="#a0000000"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/redPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/add_channel_dot_icon" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <cn.zmdx.kaka.locker.widget.ViewPagerCompat
                    android:id="@+id/newsViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/news_day_mode_behind_color" />

                <cn.zmdx.kaka.locker.content.view.CircleSpiritButton
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="40dp"
                    android:layout_marginRight="30dp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/detailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</FrameLayout>
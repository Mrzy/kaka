<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/header_part1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <cn.zmdx.kaka.locker.content.view.HeaderCircleButton
                android:id="@+id/header_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/upArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/newsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#30000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:text="爆点"
                    android:textColor="#f6f6f6"
                    android:visibility="gone" />
            </cn.zmdx.kaka.locker.content.view.HeaderCircleButton>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_part2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#50000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <!--
                 <cn.zmdx.kaka.locker.widget.TextClockCompat
                android:id="@+id/digitalClockDateNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:shadowColor="#30000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textColor="@color/white"
                android:textSize="23sp" />
            -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/news_tip_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone" >
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <cn.zmdx.kaka.locker.widget.PagerSlidingTabStrip
                    xmlns:psts="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/newsTabStrip"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    psts:pstsDividerColor="@android:color/transparent"
                    psts:pstsIndicatorColor="#ffffff"
                    psts:pstsIndicatorHeight="2dp"
                    psts:pstsPaddingRight="45dp"
                    psts:pstsUnderlineColor="@android:color/transparent" />
                <TextView
                    android:id="@+id/addNewsTabBtn"
                    android:layout_gravity="right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:gravity="center"
                    android:textColor="#a0000000"
                    android:textSize="25dp"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <cn.zmdx.kaka.locker.widget.ViewPagerCompat
                    android:id="@+id/newsViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/news_day_mode_behind_color" />

                <cn.zmdx.kaka.locker.content.view.CircleSpiritButton
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="40dp"
                    android:layout_marginRight="30dp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/detailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</FrameLayout>
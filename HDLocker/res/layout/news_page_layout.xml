<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/stickyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <cn.zmdx.kaka.locker.content.view.FlipperView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#88000000"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/header_hot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/header_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:orientation="vertical" >
            </LinearLayout>
        </cn.zmdx.kaka.locker.content.view.FlipperView>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <cn.zmdx.kaka.locker.widget.PagerSlidingTabStrip
                xmlns:psts="http://schemas.android.com/apk/res-auto"
                android:id="@+id/newsTabStrip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="31dp"
                android:background="@drawable/strip_tab_background"
                psts:pstsDividerColor="@android:color/transparent"
                psts:pstsIndicatorColor="#919191"
                psts:pstsIndicatorHeight="2dp"
                psts:pstsUnderlineColor="@android:color/transparent" />

            <cn.zmdx.kaka.locker.widget.ViewPagerCompat
                android:id="@+id/newsViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <cn.zmdx.kaka.locker.content.view.NewsDetailLayout
        android:id="@+id/detailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </cn.zmdx.kaka.locker.content.view.NewsDetailLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/setting_about_us"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_about_us_height"
        android:background="@drawable/umeng_fb_contact_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_about_us"
            android:textColor="@color/setting_about_us_text_color"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_about_us_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/setting_about_us" >

        <ImageView
            android:id="@+id/setting_about_us_content_imageview"
            android:layout_width="@dimen/setting_about_us_imageview_width"
            android:layout_height="@dimen/setting_about_us_imageview_height"
            android:layout_centerInParent="true"
            android:src="@drawable/setting_icon_locker_logo" />

        <TextView
            android:id="@+id/setting_version_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setting_about_us_textview_height"
            android:layout_below="@+id/setting_about_us_content_imageview"
            android:layout_centerInParent="true"
            android:text="@string/setting_version_number" />
    </RelativeLayout>

</RelativeLayout>
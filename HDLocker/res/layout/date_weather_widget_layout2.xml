<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <cn.zmdx.kaka.locker.widget.TextClockCompat
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#30000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="@color/white"
            android:textSize="65dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/clock"
            android:layout_alignRight="@id/clock"
            android:layout_below="@+id/clock"
            android:layout_marginTop="-5dp"
            android:background="#d0ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal" >

        <cn.zmdx.kaka.locker.widget.TextClockCompat
            android:id="@+id/lock_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:shadowColor="#30000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#d0ffffff"
            android:textSize="15dp" />

        <cn.zmdx.kaka.locker.widget.TypefaceTextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_weather_feature_pic"
            android:drawableLeft="@drawable/dingwei_icon"
            android:drawablePadding="2dp"
            android:shadowColor="#30000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#d0ffffff"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_weather_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/fl_no_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:visibility="visible" >

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    android:id="@+id/tv_no_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#30000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:textColor="#d0ffffff"
                    android:textSize="15dp" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/rl_weather_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_weather_feature_pic"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <cn.zmdx.kaka.locker.widget.TypefaceTextView
                    android:id="@+id/tv_weather_centtemp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:shadowColor="#30000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:textColor="#d0ffffff"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <cn.zmdx.kaka.locker.widget.TypefaceTextView
            android:id="@+id/tv_lunar_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#30000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#d0ffffff"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gusture_dialog_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/gusture_view_padding_top" >

    <cn.zmdx.kaka.locker.widget.TypefaceTextView
        android:id="@+id/gusture_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/gusture_textview_color"
        android:text="@string/gustrue_prompt"
        android:textSize="15sp" />

    <cn.zmdx.kaka.locker.widget.LockPatternView
        android:id="@+id/gusture"
        android:layout_width="@dimen/gusture_pattern_lock_width"
        android:layout_height="@dimen/gusture_pattern_lock_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/gusture_pattern_lock_margin_top"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="@dimen/gusture_view_button_view_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/gusture_view_button_margin_top"
        android:orientation="horizontal" >

        <cn.zmdx.kaka.locker.widget.TypefaceTextView
            android:id="@+id/gusture_reset"
            style="@android:style/ButtonBar"
            android:layout_width="0dp"
            android:layout_height="@dimen/gusture_view_button_height"
            android:layout_weight="1"
            android:background="@drawable/gusture_button_selector"
            android:gravity="center"
            android:text="@string/gusture_redraw"
            android:textColor="@color/setting_textview_color"
            android:textSize="16sp"
            android:visibility="invisible" />

        <cn.zmdx.kaka.locker.widget.TypefaceTextView
            android:id="@+id/gusture_sure"
            style="@android:style/ButtonBar"
            android:layout_width="0dp"
            android:layout_height="@dimen/gusture_view_button_height"
            android:layout_marginLeft="@dimen/gusture_view_button_margin_left"
            android:layout_weight="1"
            android:background="@drawable/gusture_button_selector"
            android:gravity="center"
            android:text="@string/determine"
            android:textColor="@color/setting_textview_color"
            android:textSize="16sp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="always"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <cn.zmdx.kaka.locker.meiwen.widget.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/pandora_share_prompt"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/pandora_share_wechat_circle"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/pandora_share_line_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/pandora_share_icon_wechat_circle" />

                <cn.zmdx.kaka.locker.meiwen.widget.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="@string/pandora_share_to_wechat_circle"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/pandora_share_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pandora_share_wechat"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pandora_share_line_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/pandora_share_icon_wechat" />

                <cn.zmdx.kaka.locker.meiwen.widget.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="@string/pandora_share_to_wechat"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/pandora_share_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pandora_share_sina"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pandora_share_line_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/pandora_share_icon_sina" />

                <cn.zmdx.kaka.locker.meiwen.widget.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="@string/pandora_share_to_sina"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/pandora_share_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pandora_share_qq"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pandora_share_line_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/pandora_share_icon_qq" />

                <cn.zmdx.kaka.locker.meiwen.widget.TypefaceTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="@string/pandora_share_to_qq"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:contentDescription="@string/contentDescription"
                    android:src="@drawable/pandora_share_arrow" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
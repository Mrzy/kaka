<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="setting_switch">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">22dp</item>
    </style>

    <style name="setting_textview">
        <item name="android:textColor">@color/setting_text_normal_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">27dp</item>
        <item name="android:clickable">false</item>
    </style>
    
    <style name="setting_textview_subtitle">
        <item name="android:textColor">@color/setting_text_grey_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">27dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="locker_password_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.70</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="init_prompt_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.50</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="anim_locker_window">

        <!-- <item name="android:windowEnterAnimation">@android:anim/fade_in</item> -->
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="anim_slide_locker_window">

        <!-- <item name="android:windowEnterAnimation">@android:anim/fade_in</item> -->
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="init_setting_big_textview">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="init_setting_small_textview">
        <item name="android:textColor">@color/init_setting_small_textview_color</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="init_setting_button">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="pandora_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
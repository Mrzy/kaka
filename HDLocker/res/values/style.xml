<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ripple="http://schemas.android.com/apk/res-auto">

    <style name="setting_switch">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="setting_textview">
        <item name="android:textColor">@color/setting_textview_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="locker_password_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.70</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="init_prompt_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.50</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="anim_locker_window">

        <!-- <item name="android:windowEnterAnimation">@android:anim/fade_in</item> -->
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="anim_slide_locker_window">

        <!-- <item name="android:windowEnterAnimation">@android:anim/fade_in</item> -->
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="init_setting_big_textview">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="init_setting_small_textview">
        <item name="android:textColor">@color/init_setting_small_textview_color</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="init_setting_button">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="pandora_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- actionbar -->
    <style name="TransparentTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarStyle.Transparent" parent="@android:Widget.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>
    </style>

    <style name="ActionBarStyle.Transparent.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="rippleStyle" >
        <item name="rv_type">rectangle</item>
        <item name="rv_alpha">150</item>
        <item name="rv_color">#03a9f4</item>
    </style>
</resources>
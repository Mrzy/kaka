<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="setting_switch">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="setting_textview">
        <item name="android:textColor">@color/setting_textview_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="gusture_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.75</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="anim_locker_window">

        <!-- <item name="android:windowEnterAnimation">@android:anim/fade_in</item> -->
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="init_setting_big_textview">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="init_setting_small_textview">
        <item name="android:textColor">@color/init_setting_small_textview_color</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="init_setting_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>